@import "../../css/icon.wxss";

/* pages/water-control/water-control.wxss */
.ble_name {
  font-size: 40rpx;
  color: #1518acc5;
  margin-left: 50rpx;
  overflow:hidden;
  text-overflow:ellipsis;
}


.line {
background-color: black;
height: 2rpx;
width: 100%;
}

.canvas {
width: 750rpx;
height: 500rpx;
}

/* component/radar-set/radar-set.wxss */
/*雷达设置列表格式*/
.title_set {
border-style: solid;
border-width: 1rpx;
height: 80rpx;
line-height: 80rpx;
}

.flex-row {
display: flex;
flex-direction: row;
margin-top: 5rpx;
}

.flex-col {
display: flex;
flex-direction: column;
}

.input_change {
background-color: coral
}

.flex-item-picker {
flex-grow: 0;
border: 1rpx solid #ccc;
margin-left: 10rpx;
margin-right: 10rpx;
}

.flex-item-head {
flex-grow: 0;
width: 100rpx;
text-align: left;
white-space: nowrap; 
margin-right: auto;
}

.flex-item-input {
flex-grow: 0;
border-style: inset;
margin-left: 100rpx;
margin-right: 10rpx;
margin-top: 10rpx;
width: 180rpx; 
height: 53rpx; 
display: block; 
box-sizing: border-box
}

.param-body {
display: flex;
flex-flow: row nowrap;
justify-content: space-between;
}

.param-input {
width: 250rpx; 
height: 42rpx; 
display: block; 
box-sizing: border-box;
}

.param-button-read {
padding: 0;
margin-top: 5px;
margin-bottom: 5px;
width: 50rpx;
height: 48rpx;
display: block;
box-sizing: border-box;
position: relative;
font-weight: 400;
}

.param-button-set {
padding: 0;
margin-top: 5px;
margin-bottom: 5px;
width: 50rpx;
height: 48rpx;
display: block;
box-sizing: border-box;
position: relative;
font-weight: 400;
}

.param-unit {
width: 60rpx; 
height: 53rpx; 
margin-right: auto;
}